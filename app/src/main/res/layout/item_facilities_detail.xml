<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_facilities_img_cardView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_facilities_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wish_house"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_facilities_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="호수나 강과 인접"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/item_facilities_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_facilities_img_cardView"
        app:layout_constraintStart_toEndOf="@id/item_facilities_img_cardView"/>



</androidx.constraintlayout.widget.ConstraintLayout>